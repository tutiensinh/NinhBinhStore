@model NinhBinhStore.Models.User
@{
    ViewData["Title"] = "Đăng ký";
    Layout = "_AuthLayout";
}

<div class="glass-card" style="max-width: 650px;">
    <div class="text-center mb-4">
        <h2 class="auth-title">Đăng Ký Thành Viên</h2>
        <p class="text-muted">Trải nghiệm mua sắm đồ gia dụng hiện đại</p>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
    }

    <form asp-controller="Account" asp-action="Register" method="post">
        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-id-card"></i></span> <input type="text" asp-for="Hoten" class="form-control" placeholder="Họ và tên" required>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-user"></i></span> <input type="text" asp-for="Tendangnhap" class="form-control" placeholder="Tên đăng nhập" required>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-key"></i></span> <input type="password" asp-for="Matkhau" id="regPass" class="form-control" placeholder="Mật khẩu" required>
                    <button class="btn btn-outline-secondary bg-white" type="button" onclick="togglePassword('regPass', 'iconReg')">
                        <i id="iconReg" class="fa-solid fa-eye"></i>
                    </button>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-shield-halved"></i></span> <input type="password" name="nhaplaimatkhau" id="confirmPass" class="form-control" placeholder="Nhập lại mật khẩu" required>
                    <button class="btn btn-outline-secondary bg-white" type="button" onclick="togglePassword('confirmPass', 'iconConfirm')">
                        <i id="iconConfirm" class="fa-solid fa-eye"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span> <input type="email" asp-for="Email" class="form-control" placeholder="Email liên hệ" required>
            </div>
        </div>

        <div class="mb-3">
            <div class="input-group">
                <span class="input-group-text"><i class="fa-solid fa-phone"></i></span> <input type="tel" asp-for="Sodienthoai" class="form-control" placeholder="Số điện thoại">
            </div>
        </div>

        <div class="mb-4">
            <div class="input-group">
                <span class="input-group-text"><i class="fa-solid fa-location-dot"></i></span> <input type="text" asp-for="Diachi" class="form-control" placeholder="Địa chỉ giao hàng">
            </div>
        </div>

        <div class="d-grid mb-3">
            <button type="submit" class="btn btn-auth btn-lg" style="background: linear-gradient(45deg, #ff6600, #ff8533);">ĐĂNG KÝ NGAY</button>
        </div>

        <div class="text-center">
            <p class="mb-0">Đã có tài khoản? <a asp-action="Login" class="auth-link">Đăng nhập ngay</a></p>
        </div>
    </form>
</div>