@model NinhBinhStore.Models.User
@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<div class="container my-5" style="max-width: 800px;">
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">Hồ Sơ Của Tôi</h2>
        <p class="text-muted">Quản lý thông tin hồ sơ để bảo mật tài khoản</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fa-solid fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="fa-solid fa-triangle-exclamation me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null)
    {
        <div class="card border-0 shadow rounded-4">
            <div class="card-body p-5">
                <form asp-action="UpdateInfo" method="POST">
                    <div class="row">
                        <div class="col-md-12 text-center mb-4">
                            <div class="d-inline-block position-relative">
                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center fs-1 fw-bold" style="width: 100px; height: 100px;">
                                    @Model.Hoten.Substring(0, 1).ToUpper()
                                </div>
                                <span class="position-absolute bottom-0 start-100 translate-middle p-2 bg-success border border-light rounded-circle">
                                    <span class="visually-hidden">Active</span>
                                </span>
                            </div>
                            <h5 class="mt-3 mb-0 fw-bold">@Model.Hoten</h5>
                            <span class="badge bg-secondary rounded-pill">Thành viên</span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold text-secondary">Họ và tên</label>
                            <input type="text" class="form-control form-control-lg" asp-for="Hoten" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold text-secondary">Tên đăng nhập</label>
                            <input type="text" class="form-control form-control-lg bg-light" value="@Model.Tendangnhap" readonly disabled>
                            <small class="text-muted" style="font-size: 0.8rem;">* Tên đăng nhập không thể thay đổi</small>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold text-secondary">Email</label>
                        <input type="email" class="form-control form-control-lg" asp-for="Email" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold text-secondary">Số điện thoại</label>
                        <input type="tel" class="form-control form-control-lg" asp-for="Sodienthoai" required>
                    </div>
                    <div class="mb-4">
                        <label class="form-label fw-bold text-secondary">Địa chỉ</label>
                        <textarea class="form-control form-control-lg" asp-for="Diachi" rows="2" required></textarea>
                    </div>

                    <div class="text-center pt-3">
                        <button type="submit" class="btn btn-primary px-5 btn-lg rounded-pill fw-bold shadow-sm">
                            <i class="fa-solid fa-floppy-disk me-2"></i> Lưu Thay Đổi
                        </button>
                    </div>
                </form>
            </div>
        </div>
    }
</div>