@model List<NinhBinhStore.Models.Contact>
@{
    ViewData["Title"] = "Quản lý Liên hệ";
    Layout = "_AdminLayout";
}

<div class="mb-4">
    <a asp-action="Dashboard" class="text-decoration-none text-muted"><i class="fa-solid fa-arrow-left me-1"></i> Dashboard</a>
    <h3 class="fw-bold mt-1">Hộp thư Liên hệ</h3>
</div>

<div class="card border-0 shadow-sm rounded-4">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-uppercase small fw-bold text-muted">
                    <tr>
                        <th class="ps-4">Người gửi</th>
                        <th>Email</th>
                        <th style="width: 40%;">Nội dung</th>
                        <th>Ngày gửi</th>
                        <th class="text-end pe-4">Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr><td colspan="5" class="text-center py-4 text-muted">Chưa có tin nhắn nào.</td></tr>
                    }
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@c.Hoten</td>
                            <td>@c.Email</td>
                            <td><div class="text-truncate" style="max-width: 300px;" title="@c.Noidung">@c.Noidung</div></td>
                            <td class="text-muted small">@c.Ngaygui.ToString("dd/MM/yyyy HH:mm")</td>
                            <td class="text-end pe-4">
                                <a href="mailto:@c.Email?subject=Phản hồi từ NinhBinhStore&body=Chào @c.Hoten," class="btn btn-success btn-sm me-1" title="Trả lời">
                                    <i class="fa-solid fa-reply"></i>
                                </a>
                                <a asp-action="DeleteContact" asp-route-id="@c.Id" class="btn btn-outline-danger btn-sm" onclick="return confirm('Xóa tin nhắn này?')" title="Xóa">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>