@model NinhBinhStore.Models.Product
@{
    bool isEdit = Model.Id > 0;
    ViewData["Title"] = isEdit ? "Cập nhật sản phẩm" : "Thêm sản phẩm";
    Layout = "_AdminLayout";
    // Danh sách danh mục cứng (hoặc lấy từ ViewBag nếu Controller có truyền)
    var categories = new List<string> { "Nhà bếp", "Gia dụng lớn", "Làm sạch", "Giải trí", "Gia dụng khác", "Khuyến mãi" };
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <a asp-action="ManageProducts" class="text-decoration-none text-muted"><i class="fa-solid fa-arrow-left me-1"></i> Quay lại danh sách</a>
        </div>

        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-header bg-white py-3">
                <h4 class="card-title fw-bold mb-0 text-primary">
                    <i class="fa-solid @(isEdit ? "fa-pen-to-square" : "fa-plus-circle") me-2"></i>
                    @(isEdit ? "Cập nhật sản phẩm" : "Thêm sản phẩm mới")
                </h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="SaveProduct" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" name="hinhanhCu" value="@Model.Hinhanh" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên sản phẩm</label>
                        <input asp-for="Tensp" class="form-control" required />
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Giá bán (VNĐ)</label>
                            <input asp-for="Dongia" type="number" class="form-control" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">Số lượng tồn kho</label>
                            <input asp-for="Tonkho" type="number" class="form-control" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Danh mục</label>
                        <select asp-for="Loai" class="form-select">
                            @foreach (var cat in categories)
                            {
                                <option value="@cat">@cat</option>
                            }
                        </select>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Hình ảnh</label>
                        <input type="file" name="hinhanhFile" class="form-control" accept="image/*" onchange="previewImage(this)" />
                        <div class="mt-3 text-center p-3 border rounded bg-light">
                            <img id="imgPreview" src="@(string.IsNullOrEmpty(Model.Hinhanh) ? "/images/products/blender-1.jpg" : "/" + Model.Hinhanh)"
                                 style="max-height: 200px; max-width: 100%; object-fit: contain;" />
                            <small class="d-block text-muted mt-2">Xem trước hình ảnh</small>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Mô tả chi tiết</label>
                        <textarea asp-for="Mota" class="form-control" rows="5"></textarea>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg fw-bold">
                            <i class="fa-solid fa-floppy-disk me-2"></i>Lưu Thông Tin
                        </button>
                        <a asp-action="ManageProducts" class="btn btn-light text-muted">Hủy bỏ</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('imgPreview').src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}