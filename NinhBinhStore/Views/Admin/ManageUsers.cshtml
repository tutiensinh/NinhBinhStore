@model List<NinhBinhStore.Models.User>
@{
    ViewData["Title"] = "Quản lý Người dùng";
    Layout = "_AdminLayout";
}

<div class="mb-4">
    <a asp-action="Dashboard" class="text-decoration-none text-muted"><i class="fa-solid fa-arrow-left me-1"></i> Dashboard</a>
    <h3 class="fw-bold mt-1">Danh sách Khách hàng</h3>
</div>

<div class="card border-0 shadow-sm rounded-4">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light text-uppercase small fw-bold text-muted">
                <tr>
                    <th class="ps-4">ID</th>
                    <th>Họ tên</th>
                    <th>Tên đăng nhập</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Vai trò</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var u in Model)
                {
                    <tr>
                        <td class="ps-4">@u.Id</td>
                        <td class="fw-bold">@u.Hoten</td>
                        <td>@u.Tendangnhap</td>
                        <td>@u.Email</td>
                        <td>@(string.IsNullOrEmpty(u.Sodienthoai) ? "---" : u.Sodienthoai)</td>
                        <td>
                            <span class="badge @(u.Vaitro == "admin" ? "bg-danger" : "bg-secondary")">
                                @u.Vaitro
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>