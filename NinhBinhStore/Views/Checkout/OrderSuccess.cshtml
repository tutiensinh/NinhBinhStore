@{
    ViewData["Title"] = "Đặt hàng thành công";
    int? orderId = Context.Session.GetInt32("last_order_id");
}

<div class="container my-5 text-center" style="min-height: 60vh; display: flex; flex-direction: column; justify-content: center;">
    <div class="mb-4">
        <i class="fa-solid fa-circle-check text-success display-1"></i>
    </div>
    <h1 class="fw-bold text-success mb-3">Đặt Hàng Thành Công!</h1>
    <p class="lead text-muted">Cảm ơn bạn đã mua sắm tại Ninh Bình Store.</p>
    
    @if (orderId != null)
    {
        <div class="alert alert-light d-inline-block shadow-sm px-5 py-3 mt-3 border">
            Mã đơn hàng của bạn: <strong class="text-primary fs-4">#@orderId</strong>
        </div>
        <p class="mt-3 text-muted small">Vui lòng ghi nhớ mã đơn hàng để tra cứu tình trạng đơn.</p>
        { Context.Session.Remove("last_order_id"); }
    }

    <div class="mt-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-5 shadow">
            <i class="fa-solid fa-house me-2"></i> Quay về trang chủ
        </a>
    </div>
</div>