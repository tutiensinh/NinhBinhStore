@{
    ViewData["Title"] = "Liên hệ";
}

<div class="container my-5" style="max-width: 1000px;">
    <div class="text-center mb-5" data-aos="fade-down">
        <h2 class="fw-bold display-6 text-primary">Liên Hệ Với Chúng Tôi</h2>
        <p class="text-muted">Chúng tôi luôn sẵn sàng lắng nghe và hỗ trợ bạn 24/7</p>
    </div>

    <div class="row g-5">
        <div class="col-md-7" data-aos="fade-right">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-body p-4 p-md-5">
                    <h4 class="fw-bold mb-4">Gửi tin nhắn</h4>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fa-solid fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fa-solid fa-triangle-exclamation me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Contact" method="POST">
                        <div class="mb-3">
                            <label for="hoten" class="form-label fw-bold">Họ và tên *</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-user"></i></span>
                                <input type="text" class="form-control" id="hoten" name="hoten" required placeholder="Nhập họ tên của bạn">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label fw-bold">Email *</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fa-solid fa-envelope"></i></span>
                                <input type="email" class="form-control" id="email" name="email" required placeholder="Nhập email liên hệ">
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="noidung" class="form-label fw-bold">Nội dung *</label>
                            <textarea class="form-control" id="noidung" name="noidung" rows="5" required placeholder="Bạn cần hỗ trợ vấn đề gì?"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 btn-lg rounded-pill fw-bold shadow-sm">
                            <i class="fa-solid fa-paper-plane me-2"></i> GỬI LIÊN HỆ
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-5" data-aos="fade-left">
            <div class="card border-0 shadow-sm rounded-4 h-100 bg-primary text-white" style="background: linear-gradient(135deg, #0d6efd, #0a58ca);">
                <div class="card-body p-4 p-md-5 d-flex flex-column justify-content-center">
                    <h4 class="fw-bold mb-4 border-bottom border-white pb-2">Thông Tin Liên Hệ</h4>

                    <div class="d-flex mb-4 align-items-start">
                        <div class="bg-white bg-opacity-25 p-3 rounded-circle me-3">
                            <i class="fa-solid fa-location-dot fs-4 text-white"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-1">Địa chỉ</h6>
                            <p class="mb-0 text-white-50">Xã Ninh Xuân, Huyện Hoa Lư, Tỉnh Ninh Bình, Việt Nam</p>
                        </div>
                    </div>

                    <div class="d-flex mb-4 align-items-start">
                        <div class="bg-white bg-opacity-25 p-3 rounded-circle me-3">
                            <i class="fa-solid fa-phone fs-4 text-white"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-1">Điện thoại</h6>
                            <p class="mb-0 text-white-50">1900 1234 (8:00 - 22:00)</p>
                        </div>
                    </div>

                    <div class="d-flex mb-4 align-items-start">
                        <div class="bg-white bg-opacity-25 p-3 rounded-circle me-3">
                            <i class="fa-solid fa-envelope fs-4 text-white"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-1">Email</h6>
                            <p class="mb-0 text-white-50">hotro@ninhbinhstore.com</p>
                        </div>
                    </div>

                    <div class="mt-auto pt-3">
                        <div class="rounded-4 overflow-hidden shadow-sm border border-white border-opacity-25">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3728.5758668333995!2d105.9631297!3d20.2586269!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31366c415d4054e5%3A0x400f0a0f1c5a8f11!2zTmluaCBYdcOibiwgSG9hIEzGsCwgTmluaCBCw6xuaA!5e0!3m2!1svi!2s!4v1698765432100" width="100%" height="200" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>