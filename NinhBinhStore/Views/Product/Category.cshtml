@model List<NinhBinhStore.Models.Product>
@{
    // Lấy dữ liệu từ ViewBag (truyền từ Controller)
    string catName = ViewBag.CategoryName;
    string currentRange = ViewBag.CurrentPriceRange ?? "all";
    ViewData["Title"] = catName;
}

<div class="container my-5">
    <nav aria-label="breadcrumb" class="mb-4" data-aos="fade-right">
        <ol class="breadcrumb bg-light p-3 rounded-3 shadow-sm">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted">
                    <i class="fa-solid fa-house"></i> Trang chủ
                </a>
            <li class="breadcrumb-item active fw-bold text-primary" aria-current="page">@catName</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-3 mb-4" data-aos="fade-right">
            <div class="card border-0 shadow-sm rounded-4 sticky-top" style="top: 90px; z-index: 900;">
                <div class="card-header bg-primary text-white fw-bold py-3 rounded-top-4">
                    <i class="fa-solid fa-filter me-2"></i> Bộ Lọc Tìm Kiếm
                </div>
                <div class="card-body p-4">
                    <h6 class="fw-bold mb-3 text-dark"><i class="fa-solid fa-money-bill-wave me-2 text-success"></i>Khoảng giá</h6>
                    <form method="GET" action="/Product/Category">
                        <input type="hidden" name="loai" value="@catName">

                        <div class="mb-3">
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="priceRange" id="priceAll" value="all" @(currentRange == "all" ? "checked" : "")>
                                <label class="form-check-label" for="priceAll">Tất cả</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="priceRange" id="price1" value="0-1000000" @(currentRange == "0-1000000" ? "checked" : "")>
                                <label class="form-check-label" for="price1">Dưới 1 triệu</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="priceRange" id="price2" value="1000000-5000000" @(currentRange == "1000000-5000000" ? "checked" : "")>
                                <label class="form-check-label" for="price2">1 - 5 triệu</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="priceRange" id="price3" value="5000000-10000000" @(currentRange == "5000000-10000000" ? "checked" : "")>
                                <label class="form-check-label" for="price3">5 - 10 triệu</label>
                            </div>
                            <div class="form-check mb-2">
                                <input class="form-check-input" type="radio" name="priceRange" id="price4" value="10000000-999999999" @(currentRange == "10000000-999999999" ? "checked" : "")>
                                <label class="form-check-label" for="price4">Trên 10 triệu</label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 rounded-pill fw-bold shadow-sm">
                            Áp dụng lọc
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-9">
            @if (Model == null || Model.Count == 0)
            {
                <div class="alert alert-light text-center py-5 shadow-sm border-0 rounded-4" role="alert" data-aos="fade-up">
                    <i class="fa-solid fa-magnifying-glass display-1 text-muted mb-3"></i>
                    <h4 class="text-muted">Không tìm thấy sản phẩm nào!</h4>
                    <p class="text-muted small">Vui lòng thử chọn khoảng giá khác.</p>
                </div>
            }
            else
            {
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
                    @foreach (var p in Model)
                    {
                        <partial name="_ProductCard" model="p" />
                    }
                </div>
            }
        </div>
    </div>
</div>